<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oftatech.superschoolboyremastered">

    <application
        android:name=".util.Application"
        android:allowBackup="true"
        android:icon="@mipmap/superschoolboy_remastered_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/superschoolboy_remastered_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperSchoolboyRemastered">
        <activity
            android:name=".activity.TrainingActivity"
            android:exported="false"
            android:theme="@style/Theme.SuperSchoolboyRemastered.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SuperSchoolboyRemastered.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--TODO Заменить id-->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/ssr_gpg_app_id" />
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>